<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/homePlaceholderFragment"
        android:name="com.zygotecnologia.zygotv.ui.main.moviesAndSeries.HomePlaceholderFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_homePlaceholderFragment_to_detailFragment"
            app:destination="@id/detailFragment"></action>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.zygotecnologia.zygotv.ui.detail.DetailFragment"
        android:label="DetailFragment" />
